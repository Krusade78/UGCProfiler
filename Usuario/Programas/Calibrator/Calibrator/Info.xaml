<UserControl  x:Class="Calibrator.Info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             Width="525" Height="630" FontFamily="LCD"
            Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#B2000000" Offset="0"/>
                <GradientStop Color="#A2000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <GroupBox Header="Ejes" HorizontalAlignment="Left" Height="486" Margin="10,15,0,0" VerticalAlignment="Top" Width="188" Foreground="GreenYellow">
            <Grid>
                <Viewbox HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="128" Width="128">
                    <Grid Height="4195" Width="4195" Background="#FF001900">
                        <Ellipse x:Name="ejeXY" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Fill="Red" Width="100" Height="100"/>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelxy" Content="X: 0000 # Y: 0000" Foreground="Yellow" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top" Width="128" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Viewbox HorizontalAlignment="Left" Margin="148,10,0,0" VerticalAlignment="Top" Height="128" Width="20">
                    <Grid Height="255" Width="40" Background="#FF001900">
                        <Rectangle x:Name="ejeZ" VerticalAlignment="Bottom" Height="100">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                    <GradientStop Color="Red" Offset="0"/>
                                    <GradientStop Color="#FFFF9D9D" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelz" Content="Z: 000" Foreground="Yellow" HorizontalAlignment="Left" Margin="138,138,0,0" VerticalAlignment="Top" Width="38" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Viewbox HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Height="20" Width="128">
                    <Grid Height="80" Width="520" Background="#FF001900">
                        <Rectangle x:Name="ejeR" HorizontalAlignment="Left" Margin="0,0,0,0" Fill="Red" Width="8"/>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelr" Content="R: 000" Foreground="Yellow" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="128" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Ellipse HorizontalAlignment="Left" Margin="20,204,0,0" VerticalAlignment="Top" Width="50" Height="50" Fill="#FF001900"/>
                <!--<ed:Arc x:Name="ejeRX" HorizontalAlignment="Left" Margin="20,204,0,0" VerticalAlignment="Top" Width="50" Height="50" EndAngle="-90.0" ArcThicknessUnit="Percent" ArcThickness="100">
                    <ed:Arc.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFF2424" Offset="1"/>
                            <GradientStop Color="#FFFF6E6E" Offset="0"/>
                        </RadialGradientBrush>
                    </ed:Arc.Fill>
                </ed:Arc>-->
                <Label x:Name="Labelrx" Content="Rx: 000" Foreground="Yellow" HorizontalAlignment="Left" Margin="20,254,0,0" VerticalAlignment="Top" Width="50" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Ellipse HorizontalAlignment="Right" Margin="0,204,20,0" VerticalAlignment="Top" Width="50" Height="50" Fill="#FF001900"/>
                <!--<ed:Arc x:Name="ejeRY" HorizontalAlignment="Right" Margin="0,204,20,0" VerticalAlignment="Top" Width="50" Height="50" EndAngle="-90.0" ArcThicknessUnit="Percent" ArcThickness="100">
                    <ed:Arc.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFF2424" Offset="1"/>
                            <GradientStop Color="#FFFF6E6E" Offset="0"/>
                        </RadialGradientBrush>
                    </ed:Arc.Fill>
                </ed:Arc>-->
                <Label x:Name="Labelry" Content="Ry: 000" Foreground="Yellow" HorizontalAlignment="Right" Margin="0,254,20,0" VerticalAlignment="Top" Width="50" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Viewbox HorizontalAlignment="Center" Margin="0,277,0,0" VerticalAlignment="Top" Height="20" Width="160">
                    <Grid Height="40" Width="255" Background="#FF001900">
                        <Rectangle x:Name="ejeSl1" HorizontalAlignment="Left" Width="40">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="1,0.5" MappingMode="RelativeToBoundingBox" StartPoint="0,0.5">
                                    <GradientStop Color="Red" Offset="1"/>
                                    <GradientStop Color="#FFFF9D9D" Offset="0"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelsl1" Content="Slider 1: 000" Foreground="Yellow" HorizontalAlignment="Center" Margin="0,297,0,0" VerticalAlignment="Top" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Viewbox HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Height="20" Width="160">
                    <Grid Height="40" Width="255" Background="#FF001900">
                        <Rectangle x:Name="ejeSl2" HorizontalAlignment="Left" Width="100">
                            <Rectangle.Fill>
                                <LinearGradientBrush EndPoint="1,0.5" MappingMode="RelativeToBoundingBox" StartPoint="0,0.5">
                                    <GradientStop Color="Red" Offset="1"/>
                                    <GradientStop Color="#FFFF9D9D" Offset="0"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelsl2" Content="Slider 2: 000" Foreground="Yellow" HorizontalAlignment="Center" Margin="10,340,0,0" VerticalAlignment="Top" Padding="0,2" HorizontalContentAlignment="Center"/>

                <Viewbox HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="80" Width="80">
                    <Grid Height="4195" Width="4195" Background="#FF001900">
                        <Ellipse x:Name="ejeMXY" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Fill="Red" Width="100" Height="100"/>
                    </Grid>
                </Viewbox>
                <Label x:Name="Labelmxy" Content="X: 0000 # Y: 0000" Foreground="Yellow" HorizontalAlignment="Left" Margin="95,391,0,0" VerticalAlignment="Top" Width="71" Padding="0,2" HorizontalContentAlignment="Center" Height="45"/>

            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox" Header="GroupBox" HorizontalAlignment="Left" Height="65" Margin="10,506,0,0" VerticalAlignment="Top" Width="188">
            <Grid>
                <Label x:Name="label" Content="X: 0000&#13;Y: 0000" HorizontalAlignment="Left" Height="37" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <CheckBox x:Name="checkBox" Content="Datos en bruto" HorizontalAlignment="Left" Margin="203,332,0,0" VerticalAlignment="Top" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked" Foreground="White"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="134" Margin="226,376,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="261" Foreground="White"/>
    </Grid>
</UserControl>
