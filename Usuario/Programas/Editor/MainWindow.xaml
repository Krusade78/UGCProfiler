<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        mc:Ignorable="d"
        Title="Editor" Height="350" Width="525" Icon="res/editor.ico" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF004DAA" Offset="0"/>
            <GradientStop Color="#FF83B5F1" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>
        <Menu Height="21" VerticalAlignment="Top" Background="#FF3893FF" >
            <MenuItem Header="Archivo" Foreground="Black">
                <MenuItem.ItemsPanel>
                    <ItemsPanelTemplate>
                        <
                    </ItemsPanelTemplate>
                </MenuItem.ItemsPanel>
                <MenuItem Header="Nuevo" />
                <MenuItem Header="Abrir" />
                <Separator />
                <MenuItem Header="Guardar"/>
                <MenuItem Header="Guardar como..."/>
                <Separator />
                <MenuItem Header="Imprimir"/>
                <MenuItem Header="Vista previa"/>
                <Separator />
                <MenuItem Header="Salir"/>
            </MenuItem>
            <MenuItem Header="Perfil">
                <MenuItem Header="Configuración ratón"/>
                <MenuItem Header="Configuración modos"/>
                <MenuItem Header="Lanzar"/>
            </MenuItem>
            <MenuItem Header="Vista">
                <MenuItem Header="Vista de edición"/>
                <MenuItem Header="Vista de lista"/>
            </MenuItem>
            <MenuItem Header="Ayuda">
                <MenuItem Header="Acerca de..."/>
            </MenuItem>
        </Menu>
        <Grid>
            <ToolBarTray Background="{x:Null}">
                <ToolBar ToolBarTray.IsLocked="True" Background="{x:Null}">
                    <Button>
                        <Image Source="res/nuevo.ico" Height="16" />
                    </Button>
                    <Button>
                        <Image Source="res/abrir.ico" Height="16" />
                    </Button>
                    <Button>
                        <Image Source="res/guardar.ico" Height="16" />
                    </Button>
                    <Button>
                        <Image Source="res/imprimir.ico" Height="16" />
                    </Button>
                    <Separator />
                    <Button>
                        <Image Source="res/LaunchHS.png" Height="16" />
                    </Button>
                    <Separator />
                    <Button>
                        <Image Source="res/mouse.png" Height="16" />
                    </Button>
                    <Separator />
                    <Button>
                        <Image Source="res/EditTableHS.png" Height="16" />
                    </Button>
                    <Button>
                        <Image Source="res/TableHS.png" Height="16" />
                    </Button>
                </ToolBar>
            </ToolBarTray>
            <ToolBarTray HorizontalAlignment="Right" Background="{x:Null}">
                <ToolBar ToolBarTray.IsLocked="True" Background="{x:Null}">
                    <Label Content="Modo actual:" Foreground="White" />
                    <ComboBox SelectedIndex="0" IsReadOnly="True" Background="{x:Null}" Foreground="Red">
                        <ComboBoxItem Content="Sin modos" />
                    </ComboBox>
                    <ComboBox Background="{x:Null}" />
                    <ComboBox Background="{x:Null}" />
                </ToolBar>
            </ToolBarTray>
        </Grid>

    </StackPanel>
</Window>
