                    <Grid x:Name="b11" Grid.Row="20" Background="#FFD0DFEA" />
                    <GridSplitter Grid.Row="21" x:Name="gs11" HorizontalAlignment="Stretch" Height="3" VerticalAlignment="Center" Background="Gray"/>
                    <Grid x:Name="b12" Grid.Row="22" Background="#FFB7D8F3" />
                    <GridSplitter Grid.Row="23" x:Name="gs12" HorizontalAlignment="Stretch" Height="3" VerticalAlignment="Center" Background="Gray"/>
                    <Grid x:Name="b13" Grid.Row="24" Background="#FFD0DFEA" />
                    <GridSplitter Grid.Row="25" x:Name="gs13" HorizontalAlignment="Stretch" Height="3" VerticalAlignment="Center" Background="Gray"/>
                    <Grid x:Name="b14" Grid.Row="26" Background="#FFB7D8F3" />
                    <GridSplitter Grid.Row="27" x:Name="gs14" HorizontalAlignment="Stretch" Height="3" VerticalAlignment="Center" Background="Gray"/>
                    <Grid x:Name="b15" Grid.Row="28" Background="#FFD0DFEA" />
                    <GridSplitter Grid.Row="29" x:Name="gs15" HorizontalAlignment="Stretch" Height="3" VerticalAlignment="Center" Background="Gray"/>
                    <Grid x:Name="b16" Grid.Row="30" Background="#FFB7D8F3" />-->
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
