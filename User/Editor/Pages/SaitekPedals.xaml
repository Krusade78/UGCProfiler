<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Profiler.Pages.SaitekPedals"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Viewbox StretchDirection="DownOnly">
        <Grid Loaded="Grid_Loaded" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/res/pedales.png" Width="600" Stretch="Uniform"  HorizontalAlignment="Center" VerticalAlignment="Center" />

            <ToggleButton Content="{StaticResource right_brake}" x:Name="BtRight"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,65,0" Width="130" Checked="RightPedal_Click"/>
            <ToggleButton Content="{StaticResource left_brake}" x:Name="BtLeft"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,50,0,0" Width="130" Checked="LeftPedal_Click"/>

            <ToggleButton Content="{StaticResource axis_r}" x:Name="BtDefault"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,550,0,0" Width="130" Checked="AxisR_Click"/>
        </Grid>
    </Viewbox>
</Page>
