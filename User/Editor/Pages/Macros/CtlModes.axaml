<UserControl
    x:Class="Profiler.Pages.Macros.CtlModes"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Profiler.Pages.Macros"
    mc:Ignorable="d">

    <Border x:Name="Panel2" CornerRadius="4" Background="#a070a0c0" BoxShadow="5 5 10 Gray" Margin="1,1,5,5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
                <Border Background="{DynamicResource CardBackgroundFillColorDefault}" VerticalAlignment="Top" >
                    <TextBlock Text="{StaticResource modes}" HorizontalAlignment="Center" Margin="0,5" Classes="SubtitleTextBlockStyle" />
                </Border>
                <StackPanel Margin="10" Grid.Row="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" MinWidth="70"><Run Text="{StaticResource mode}"/>:</TextBlock>
                    <ComboBox x:Name="cbMode" SelectedIndex="0">
                            <TextBlock><Run Text="{StaticResource mode}" /> 1</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 2</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 3</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 4</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 5</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 6</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 7</TextBlock>
                            <TextBlock><Run Text="{StaticResource mode}" /> 8</TextBlock>
                        </ComboBox>
                        <Button Content="Set" Width="50" Click="ButtonSetMode_Click" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,20">
                    <TextBlock VerticalAlignment="Center" MinWidth="70"><Run Text="{StaticResource submode}"/>:</TextBlock>
                        <ComboBox x:Name="cbSubmode" SelectedIndex="0">
                            <TextBlock><Run Text="{StaticResource submode}" /> 1</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 2</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 3</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 4</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 5</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 6</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 7</TextBlock>
                            <TextBlock><Run Text="{StaticResource submode}" /> 8</TextBlock>
                        </ComboBox>
                        <Button Content="Set"  Width="50" Click="ButtonSetSubmode_Click" />
                    </StackPanel>

                    <!--<TextBlock Text="Modo preciso" />
