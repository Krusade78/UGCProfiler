<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Profiler.Dialogs.HatEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="{StaticResource hat_editor_description}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10" />
        <Grid HorizontalAlignment="Center" ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Text="vJoy" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="{StaticResource hat}" HorizontalAlignment="Center"/>

            <NumberBox Grid.Row="1" Grid.Column="1" x:Name="NumericUpDownJ" Maximum="3" Minimum="1" Value="1" SpinButtonPlacementMode="Compact"/>
            <NumberBox Grid.Row="1" Grid.Column="2" x:Name="NumericUpDown1" Maximum="4" Minimum="1" Value="1" SpinButtonPlacementMode="Compact"/>
            <TextBlock Grid.Row="1" Text="{StaticResource assign_to}" VerticalAlignment="Center"/>
        </Grid>
    </StackPanel>
</Page>
