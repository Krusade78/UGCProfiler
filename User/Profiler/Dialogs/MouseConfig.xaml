<Frame
	x:Class="Profiler.Dialogs.MouseConfig"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<StackPanel Width="430">
		<TextBlock Text="{StaticResource mouse_description}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10"/>
		<NumberBox x:Name="NumericUpDown1" PlaceholderText="1" HorizontalAlignment="Center" Maximum="125" Minimum="1" LargeChange="10" Width="150" SpinButtonPlacementMode="Inline" />
	</StackPanel>
</Frame>
