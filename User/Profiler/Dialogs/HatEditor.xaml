<Frame x:Class="Profiler.Dialogs.HatEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <StackPanel>
        <TextBlock Text="{StaticResource hat_editor_description}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10" />
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="5"/>
                <ColumnDefinition Width="auto" />
				<ColumnDefinition Width="5"/>
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="2" Text="vJoy" HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="4" Text="{StaticResource hat}" HorizontalAlignment="Center"/>

            <NumberBox Grid.Row="1" Grid.Column="2" x:Name="NumericUpDownJ" Maximum="3" Minimum="1" Value="1" SpinButtonPlacementMode="Compact" GotFocus="NumberBox_GotFocus"/>
            <NumberBox Grid.Row="1" Grid.Column="4" x:Name="NumericUpDown1" Maximum="4" Minimum="1" Value="1" SpinButtonPlacementMode="Compact"/>
            <TextBlock Grid.Row="1" Text="{StaticResource assign_to}" VerticalAlignment="Center"/>
        </Grid>
    </StackPanel>
</Frame>
