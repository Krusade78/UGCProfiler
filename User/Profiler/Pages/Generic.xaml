<Frame x:Class="Profiler.Pages.Generic"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">
	<ScrollViewer x:Name="scroll" Margin="20" MaxWidth="800">
		<StackPanel>
            <Grid x:Name="bd1" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="0,0,30,0" Translation="0,0,8">
                <Grid.Shadow>
                    <ThemeShadow />
                </Grid.Shadow>
                <StackPanel x:Name="spAxes" Margin="15">
					<TextBlock Text="{StaticResource axes}" FontSize="28" FontWeight="Light"/>
				</StackPanel>
			</Grid>

            <Grid x:Name="bd2" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="0,20,30,20" Translation="0,0,8">
                <Grid.Shadow>
                    <ThemeShadow />
                </Grid.Shadow>
                <StackPanel x:Name="spHats" Margin="15">
					<TextBlock Text="{StaticResource hats}" FontSize="28" FontWeight="Light" />
				</StackPanel>
			</Grid>

            <Grid x:Name="bd3" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="0,0,30,20" Translation="0,0,8">
                <Grid.Shadow>
                    <ThemeShadow />
                </Grid.Shadow>
                <StackPanel x:Name="spButtons" Margin="15">
					<TextBlock Text="{StaticResource buttons}" FontSize="28" FontWeight="Light" />
				</StackPanel>
			</Grid>
		</StackPanel>
	</ScrollViewer>
</Frame>
