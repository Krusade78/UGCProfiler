<UserControl
    x:Class="Profiler.Pages.Macros.CtlSaitekX52"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Profiler.Pages.Macros"
    mc:Ignorable="d" MinWidth="810">
    <Grid>
        <StackPanel>
            <TextBlock Text="Multi Function Display" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <CheckBox Content="{StaticResource use_name_in_mfd}" x:Name="CheckBox1" Margin="0,10,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <StackPanel>
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <TextBlock Text="{StaticResource mfd_text}" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic" Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}" Padding="5,0"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="{StaticResource text}" VerticalAlignment="Center" />
                        <TextBox x:Name="TextBox3" Margin="5,0,0,0" Width="140" MaxLength="16"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource line}" VerticalAlignment="Center"/>
                        <NumberBox x:Name="NumericUpDown9" Maximum="3" Minimum="1" Value="1" Margin="5,0,0,0" VerticalAlignment="Center" SpinButtonPlacementMode="Compact"/>
                        <Button x:Name="ButtonLinea" Content="{StaticResource text_line2}" Height="40" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,0,0,0" Click="ButtonLinea_Click" FontSize="9"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="30,0">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <TextBlock Text="MFD Pinkie" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic" Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}" Padding="5,0"/>
                    </Border>
                    <Button x:Name="ButtonX52PinkieOn" Content="Pinkie On" Width="90" Margin="0,5" Click="ButtonX52PinkieOn_Click" />
                    <Button x:Name="ButtonX52PinkieOff" Content="Pinkie Off" Width="90" Click="ButtonX52PinkieOff_Click" />
                </StackPanel>
                <StackPanel>
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <TextBlock Text="{StaticResource dates}" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic" Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}" Padding="5,0"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center">
                        <TextBlock Text="{StaticResource digit}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <NumberBox Name="NumericUpDown13" Maximum="39" Minimum="0" Value="0" SpinButtonPlacementMode="Compact"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ButtonFecha1" Content="{StaticResource date_1}" Click="ButtonFecha1_Click" />
                        <Button x:Name="ButtonFecha2" Content="{StaticResource date_2}" Margin="5,0" Click="ButtonFecha2_Click" />
                        <Button x:Name="ButtonFecha3" Content="{StaticResource date_3}" Click="ButtonFecha3_Click" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <TextBlock Text="{StaticResource watches}" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic" Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}" Padding="5,0"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="{StaticResource hour}" VerticalAlignment="Center" />
                        <NumberBox x:Name="NumericUpDown10" Maximum="23" Minimum="-23" Value="0" Margin="5,0,0,0" SpinButtonPlacementMode="Compact"/>
                        <TextBlock Text="{StaticResource minute}" VerticalAlignment="Center" Margin="10,0,5,0" />
                        <NumberBox x:Name="NumericUpDown11" Maximum="59" Minimum="0" Value="0" SpinButtonPlacementMode="Compact"/>
                        <TextBlock Text="{StaticResource watch}"  VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <NumberBox x:Name="NumericUpDown7" Maximum="3" Minimum="1" Value="1" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="Button48" Content="AM/PM" Width="80" Click="Button48_Click" />
                        <Button x:Name="Button47" Content="24H" Margin="30,0,0,0" Width="80" Click="Button47_Click"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="{StaticResource hotas_light}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0" Style="{ThemeResource BodyStrongTextBlockStyle}" />
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <StackPanel>
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}">
                        <TextBlock Text="{StaticResource light}" HorizontalAlignment="Left" VerticalAlignment="Top" FontStyle="Italic" Foreground="{ThemeResource TextOnAccentFillColorSecondaryBrush}" Padding="5,0"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{StaticResource level}" />
                            <NumberBox x:Name="NumericUpDownLuzMfd" Maximum="2" Minimum="0" Value="2" Margin="0,5,0,0" SpinButtonPlacementMode="Compact"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <Button x:Name="ButtonInfoOn" Content="Info On" Width="90" Click="ButtonInfoOn_Click" />
                            <Button x:Name="ButtonInfoOff" Content="Info Off" Margin="0,5,0,0" Width="90" Click="ButtonInfoOff_Click" />
                        </StackPanel>
                        <StackPanel>
                            <Button x:Name="ButtonLuzMfd" Content="{StaticResource mfd_light}" Width="90" Click="ButtonLuzMfd_Click" />
                            <Button x:Name="ButtonLuzBotones" Content="{StaticResource buttons_light(short)}" Margin="0,5,0,0" Width="90" Click="ButtonLuzBotones_Click" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Border x:Name="PanelBasic" Visibility="Collapsed" Background="#40000000" Margin="-4" CornerRadius="6" />
    </Grid>
</UserControl>
