<UserControl
    x:Class="Profiler.Pages.Macros.CtlName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utu="using:Uno.UI.Toolkit"
    mc:Ignorable="d">

    <utu:ElevatedView x:Name="GroupBox2" CornerRadius="4" Background="#BBF8FFF8" Elevation="8" Margin="1,1,5,5">
        <Grid Margin="10">
            <ToggleSwitch OffContent="{StaticResource basic_mode}" OnContent="{StaticResource advanced_mode}" Margin="10,32,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Toggled="ToggleSwitch_Toggled" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <TextBlock Text="{StaticResource name}" VerticalAlignment="Center" />
                <TextBox x:Name="txtName" Margin="5,0" MinWidth="300" MaxLength="32" />
            </StackPanel>
        </Grid>
    </utu:ElevatedView>
</UserControl>
