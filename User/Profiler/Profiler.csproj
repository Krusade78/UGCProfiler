<Project Sdk="Uno.Sdk">
  <PropertyGroup>
	<TargetFrameworks>net9.0-desktop</TargetFrameworks>

	<OutputType>Exe</OutputType>
	<UnoSingleProject>true</UnoSingleProject>

	<!-- Display name -->
	<ApplicationTitle>Profiler</ApplicationTitle>
	<!-- App Identifier -->
	<ApplicationId>com.companyname.Profiler</ApplicationId>
	<!-- Versions -->
	<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
	<ApplicationVersion>1</ApplicationVersion>
	<!-- Package Publisher -->
	<ApplicationPublisher>Alfredo</ApplicationPublisher>
	<!-- Package Description -->
	<Description>Profiler powered by Uno Platform.</Description>

	<!--
	  UnoFeatures let's you quickly add and manage implicit package references based on the features you want to use.
	  https://aka.platform.uno/singleproject-features
	-->
	<UnoFeatures>
	  SkiaRenderer;
	</UnoFeatures>
	<Platforms>x64</Platforms>
	<ImplicitUsings>disable</ImplicitUsings>
	<Nullable>enable</Nullable>
  <!--<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>-->
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0-desktop|x64'">
	<DebugType>none</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Calibrator\Info.xaml.cs_" />
  </ItemGroup>
	
	<ItemGroup>
		<ProjectReference Include="..\RawInputHelper\RawInputHelper.csproj" />
		<ProjectReference Include="..\Shrared\Shared.csproj" />
	</ItemGroup>
	
  <ItemGroup>
	<Content Include="Language\keytemplate-es.txt">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</Content>
	<Content Include="Language\profiler-es.json">
	  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	</Content>
  </ItemGroup>
	<ItemGroup>
		<EmbeddedResource Include="Language\keytemplate-en.txt" />
		<EmbeddedResource Include="OldProfile\GladiatosNXT.json" />
		<EmbeddedResource Include="OldProfile\Pedals.json" />
		<EmbeddedResource Include="OldProfile\X52.json" />
		<EmbeddedResource Include="res\CalibrationGrid.JPG" />
	</ItemGroup>
	<ItemGroup>
	  <PackageReference Include="Uno.Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.4.2" />
	</ItemGroup>
	
	<ItemGroup>
	  <Compile Update="OldProfile\DSPerfil.Designer.cs">
		<DesignTime>True</DesignTime>
		<AutoGen>True</AutoGen>
		<DependentUpon>DSPerfil.xsd</DependentUpon>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
	  <None Update="OldProfile\DSPerfil.xsd">
		<Generator>MSDataSetGenerator</Generator>
		<LastGenOutput>DSPerfil.Designer.cs</LastGenOutput>
		<CustomToolNamespace>OldProfile</CustomToolNamespace>
	  </None>
	</ItemGroup>
</Project>
